@model XRoute.Models.Route

@{
    ViewData["Title"] = "Add Route";
}

<h2>Add Route</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name">Route Name</label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartLocation">Start Location</label>
        <input type="text" class="form-control" asp-for="StartLocation" />
        <span asp-validation-for="StartLocation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndLocation">End Location</label>
        <input type="text" class="form-control" asp-for="EndLocation" />
        <span asp-validation-for="EndLocation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category">Category</label>
        <select asp-for="Category" class="form-control">
            <option value="Public Transport">Public Transport</option>
            <option value="Intercity Transportation">Intercity Transportation</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <button type="submit" class="button">Add Route</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
