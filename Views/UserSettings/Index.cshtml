@{
    ViewData["Title"] = "User Settings";
}

<div class="text-center">
    <h2>User Settings</h2>

    <form asp-action="UpdateEmail" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <div>
            <label>Email</label>
            <input type="email" name="email" value="@Model.Email" required />
            <button type="submit">Update Email</button>
        </div>
    </form>

    <form asp-action="UpdateProfilePicture" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <div>
            <label>Profile Picture URL</label>
            <input type="text" name="profilePictureUrl" value="@Model.ProfilePictureUrl" />
            <button type="submit">Update Profile Picture</button>
        </div>
    </form>

    <form asp-action="UpdatePassword" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <div>
            <label>Current Password</label>
            <input type="password" name="currentPassword" required />
        </div>
        <div>
            <label>New Password</label>
            <input type="password" name="newPassword" required />
        </div>
        <button type="submit">Update Password</button>
    </form>

    <form asp-action="DeleteAccount" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" onclick="return confirm('Are you sure you want to delete your account?');">Delete Account</button>
    </form>
</div>
